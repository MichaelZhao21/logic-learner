<UserControl x:Class="LogicLearner.Pages.Submission"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LogicLearner.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="672" d:DesignWidth="308" Background="#FF1E2E6C">
    <Grid>
        <TextBlock x:Name="LessonTitle" HorizontalAlignment="Left" Height="25" Margin="70,60,0,0" TextWrapping="Wrap" Text="Number: Title" VerticalAlignment="Top" Width="193" FontSize="24" Foreground="White"/>
        <Rectangle x:Name="ColorRectangle" HorizontalAlignment="Center" Height="74" Stroke="Transparent" VerticalAlignment="Top" Width="308" Fill="Green" Margin="0,269,0,0"/>
        <TextBlock x:Name="PassFailText" HorizontalAlignment="Center" Height="62" TextWrapping="Wrap" VerticalAlignment="Top" Width="284" Foreground="White" Text="Tests Passed!" TextAlignment="Center" FontSize="24" Margin="0,290,0,0"/>
        <Button x:Name="SubmitNextLesson" Content="Next Lesson" HorizontalAlignment="Center" Height="61" Margin="0,567,0,0" VerticalAlignment="Top" Width="196" Click="SubmitNextLesson_Click"/>
    </Grid>
</UserControl>
